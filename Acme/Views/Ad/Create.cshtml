@model Acme.Models.AdSelectNews

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ad</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Ad.AdName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad.AdName)
                @Html.ValidationMessageFor(model=>model.Ad.AdName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ad.AdContent, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad.AdContent)
                @Html.ValidationMessageFor(model => model.Ad.AdContent)
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Newspaper", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <dl class="dl-horizontal">
                    @foreach (Acme.Repository.Newspaper p in Model.AllPapers)
                    {
                        <dt>
                            @*@Html.CheckBox(@p.NewspaperName,false, new {@class ="checkbox"})*@
                            <input type="checkbox" name="Newspaper-@p.NewspaperId" value="@p.NewspaperId" class="col-md-1" />
                            @Html.Label(@p.NewspaperName, new { @class = "control-label col-md-2" })
                        </dt>
                    }

                </dl>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
